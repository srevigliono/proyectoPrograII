<!DOCTYPE html>
<html lang="es">
	<!-- Includes-->
	<%- include('./partials/headerLogueado.ejs') %>
		
<body>
	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src= <%= usuarios.foto %> alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuarios.usuario %>
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= usuarios.products.length %></li>
						<li><%= usuarios.comments.length %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title prompt-semibold">Novedades</h2>
					</div>
					<% if (productos && usuarios.products.length > 0) { %> <!-- VerificaciÃ³n agregada -->
						<% for (let i = 0; i < usuarios.products.length && i < 8; i++) { %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/product/detail">
										<figure class="product-box_image">
											<img class="imgIndex" src="<%= usuarios.products[i].imagen %>" alt="<%= usuarios.products[i].nombre %>">
										</figure>
										<article class="product-box_data">
											<h2 class="prompt-semibold"><%= usuarios.products[i].nombre %></h2>
											<p class="prompt-light"><%= usuarios.products[i].descripcion %></p>
											<p class="prompt-light">Comentarios: <%= usuarios.products[i].comments.length %></p>
										</article>
									</a>
								</section>
							</div>
						<% } %>
					<% } else { %> <!-- Mensaje alternativo si no hay productos -->
						<div class="col-12">
							<p>No hay productos disponibles</p>
						</div>
					<% } %>
				</div>
			</div>
		</div>
	</div>
	<!-- /Mis productos -->

</body>	
</html>

<%- include('./partials/footer.ejs') %>